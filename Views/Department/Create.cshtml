@model Employeewithef.Models.Department

@{
    ViewBag.Title = "Create";
}

<h2>Create Department</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.ValidationMessageFor(model => model.deptname, "", new { @class = "errorMessage" })

        <label for="department">Department:</label>
        @Html.DropDownListFor(model => model.deptname, new List<SelectListItem>
            {
                new SelectListItem { Text = "IT" },
                new SelectListItem { Text = "Finance"},
                new SelectListItem { Text = "HR" },
                new SelectListItem { Text = "Marketing" },
                new SelectListItem { Text = "Accounting"},
                new SelectListItem { Text = "Research & Development" },
              
            }, "Select Department", new { @class = "form-control", id = "deptname" })
        @Html.ValidationMessageFor(model => model.deptname, "", new { @class = "errorMessage" })

      
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.empid, "empid", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("empid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.empid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
